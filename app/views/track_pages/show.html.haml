-title = title_for_track_page(@track, @page)
#generic-page
  = breadcrumb_nav do
    %li=link_to "Language tracks", [:my, :tracks]
    %li=link_to "#{@track.title} track", [:my, @track]
    %li=current_link title

  .header
    .lo-container
      %h1= title

  .body
    .lo-container
      .pure-g
        .pure-u-1.pure-u-md-2-3.lhs
          .content=raw @content

          .links
            %h3 More #{@track.title} resources
            =render "links", track: @track

        .pure-u-1.pure-u-md-1-3
          =code_person_widget
